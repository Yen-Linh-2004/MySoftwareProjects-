@model WEB.Models.SANPHAM

@{
    ViewBag.Title = "DeleteProduct";
    Layout = "~/Views/Admin_Layout.cshtml";
}

<style>
    .container {
        max-width: 96%;
    }

    .product-container {
        border-radius: 10px;
        background-color: white;
        padding: 20px;
    }

    .product-content {
        font-size: 16px !important;
        text-align: center;
        vertical-align: middle !important;
        word-break: break-word !important;
    }

    .table-bordered {
        border-collapse: collapse;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #ddd !important;
        }

        .table-bordered th {
            background-color: #f2f2f2;
            color: #333;
        }



    table thead tr th {
        font-size: 16px;
    }

    .btn-lg {
        font-size: 16px;
    }

    .item_id {
        color: #0D6EFD !important;
    }
</style>

<div class="container-xxl">
    <div class="row">
        <div class="col-lg-12" style="margin-bottom:10px">
            <h1 class="page-header">Quản Lý Nhân Viên</h1>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="container employee-container" style="max-width: 96%;">
                <div style="background-color: #f2f2f2; padding: 5px">
                    <div class="container product-container">
                        <h1 style="text-align:center">Are you sure you want to delete this?</h1>

                        <br />

                        <table class="table table-bordered">
                            <thead>
                                <tr style="text-align: center; background-color: gray">
                                    <th style="width: 8%;">Mã</th>
                                    <th style="width: 15%;">Tên Sản Phẩm</th>
                                    <th style="width: 10%;">Danh Mục</th>
                                    <th style="width: 25%;">Mô tả</th>
                                    <th style="width: 10%;">Giá bán</th>
                                    <th style="width: 8%;">Số lượng tồn</th>
                                    <th style="width: 10%;">Hình ảnh</th>
                                    <th style="width: 10%;">Trạng thái</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td class="product-content item_id">@Model.MaSanPham</td>
                                    <td class="product-content" style="text-align: left">@Model.TenSanPham</td>
                                    <td class="product-content">@Model.DANHMUC.TenDanhMuc</td>
                                    <td class="product-content" style="text-align: left">@Model.MoTa</td>
                                    <td class="product-content">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", @Model.GiaBan)</td>
                                    <td class="product-content">@Model.SoLuongTon</td>
                                    <td style="text-align: center"><img src="/Images/img_Product/@Model.HinhAnh" width="70" /></td>
                                    <td class="product-content">@Model.TrangThai</td>
                                </tr>
                            </tbody>
                        </table>

                        @using (Html.BeginForm())
                        {
                            <div style="text-align: center">
                                <p>
                                    <input type="submit" value="Delete" class="btn btn-primary" style="font-size: 18px;" />
                                </p>
                            </div>
                        }
                    </div>
                    <br />

                    <div class="container">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert" style="font-size: 18px;">
                                @ViewBag.SuccessMessage
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true" style="font-size: 30px">&times;</span>
                                </button>
                            </div>
                        }
                        else if (ViewBag.FailMessage != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="font-size: 18px;">
                                @ViewBag.FailMessage
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true" style="font-size: 30px">&times;</span>
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <div class="container">
                    <div style="text-align: right">
                        <button class="btn btn-primary btn-lg" style="margin-bottom: 15px; margin-top: 15px; font-size: 18px;" onclick="window.location.href='@Url.Action("ListProducts", "Admin")'">
                            Back to Product List
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>