@{
    ViewBag.Title = "Quản Lý Người Dùng";
    Layout = "~/Views/Admin_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row justify-content-center mt-4">
        <!-- Doanh thu tháng -->
        <div class="col-lg-6">
            <div class="card text-white bg-gradient-primary shadow-lg">
                <div class="card-body">
                    <h5 class="card-title text-uppercase text-center fw-bold">Doanh Thu Tháng</h5>
                    <div class="text-center my-4">
                        <h2 class="display-3 fw-bold text-warning">
                            @ViewBag.MonthlyRevenue VNĐ
                        </h2>
                    </div>
                    <p class="text-center">Tổng doanh thu tháng hiện tại</p>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("MonthlyReport", "Admin")" class="btn btn-light btn-sm">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>
